<h3>Modificación de Revista</h3>
@if (revistaSeleccionada == null)
{
    <ul>
        @foreach (var revista in revistas)
        {
            <li>
                @revista.Titulo - @revista.Autor
                <button @onclick="() => SeleccionarRevista(revista)">Modificar</button>
